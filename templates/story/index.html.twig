{% extends 'base.html.twig' %}

{% block title %}Testez votre solution PHP !{% endblock %}

{% block body %}
		<div class="row">
			<div class="col">
				<h4>Historiques des liens https de votre projet Git :</h4>
                    <table class="table table-dark table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Liens</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Version</th>
                                    <th scope="col">Détails</th>
                                </tr>
                            </thead>
                            <tbody>
                        {% for story in stories %}
                                <tr> 
                                    <td>{{ story.appPk }}</td>
                                    <td>{{ story.appGitLink }}</td>
                                    <td>{{ story.appTestDate | date('d-m-y h:s:m') }}</td>
                                    <td>{{ story.appPhpVer }}</td>
                                    <td><a href="{{ path('show', { 'id': story.appPk }) }}" class="btn btn-success">Voir</a></td>
                                </tr>
                        {% endfor %}
                            </tbody>
                    </table>
			</div>
		</div>
        <div class="row justify-content-center">
            <div class="col-md-3">
                <a href="{{ ('/') }}" class="btn btn-primary">Retour à la page d'accueil</a>
            </div>
        </div>
{% endblock %}
